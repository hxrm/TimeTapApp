<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backdrop"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/frameLayout"
            android:layout_width="407dp"
            android:layout_height="754dp"
            android:background="@drawable/back"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchProjects"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/projectTitleTextView"
                android:layout_width="301dp"
                android:layout_height="45dp"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/startNewTaskTextView"
                android:layout_width="301dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/start_new_task"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/projectTitleTextView3"
                android:layout_width="301dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </LinearLayout>

        <SearchView
            android:id="@+id/searchProjects"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_corners"
            android:queryHint="Projects"
            android:searchHintIcon="@drawable/loupe"
            android:textColorHint="@color/navy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageBack" />

        <ImageButton
            android:id="@+id/imageBack"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
